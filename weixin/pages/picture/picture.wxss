/* pages/picture/picture.wxss */
.outer{
    padding: 0 10px;
    width: 300px;
    position: relative;
}
.title{
    font-size: 24px;
    color: pink;
}
.img{
    width: 100%;
    display: block;
    height: 300px;
    padding-right: 5px;
}
button{
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 100;
    border: 0;
    background: 0;
}
button::after{
    border: 0;
}
